{
  "deno.enablePaths": ["scripts"],
  "deno.lint": true,
  "deno.unstable": true,
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],  
  "sqltools.connections": [
    {
      "previewLimit": 50,
      "server": "localhost",
      "driver": "PostgreSQL",
      "name": "local",
      "connectString": "postgresql://postgres:postgres@127.0.0.1:54322/postgres"
    }
  ],
  "editor.tabSize": 2,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "[sql]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
}
